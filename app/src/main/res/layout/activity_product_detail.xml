<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".Controller.ProductDetailActivity">

    <ImageView
            android:layout_width="184dp"
            android:layout_height="200dp" app:srcCompat="@drawable/hat1"
            android:id="@+id/detailImage" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:id="@+id/detailName"
            android:textAlignment="viewStart" android:textStyle="bold"
            android:textSize="16sp" app:layout_constraintStart_toEndOf="@+id/detailImage"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:text="Devslopes Hoodie Gray"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailPrice" app:layout_constraintStart_toEndOf="@+id/detailImage"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailName" android:text="$28"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/detailDescription"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/detailImage"
            android:textAlignment="viewStart"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce quis orci tortor. Quisque imperdiet sodales libero et dignissim. Morbi non commodo urna. In at sapien suscipit elit auctor accumsan non id enim. Donec maximus sagittis urna, aliquet fermentum ante tincidunt at. Nunc at tristique sapien, vitae fringilla augue. Nulla justo quam, dictum quis vehicula ac, fringilla sed ipsum. Sed at libero viverra, lobortis augue eget, ultricies enim. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Mauris mollis sem eu augue egestas, vel lacinia velit dignissim. Suspendisse arcu enim, vulputate a dolor et, consectetur semper metus. Morbi pulvinar magna tincidunt diam pellentesque, vitae pulvinar nulla feugiat. Nulla a enim aliquam, facilisis nulla ac, pulvinar mauris."/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cartButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimaryDark" android:textColor="@android:color/white"
            android:text="Add to Cart!"/>
</android.support.constraint.ConstraintLayout>